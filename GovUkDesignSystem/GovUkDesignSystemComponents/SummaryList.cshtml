@model GovUkDesignSystem.GovUkDesignSystemComponents.SummaryListViewModel

<dl class="govuk-summary-list @Model?.Classes" @(Html.Raw(Model.Attributes != null ? string.Join(" ", Model.Attributes.Select(a => a.Key + "=\"" + a.Value + "\"")) : ""))>
    @{
        var anyRowHasActions = !Model.Rows.All(r => r.Actions?.Items == null || r.Actions.Items.Count == 0);
        if (Model.Rows != null && Model.Rows.Count > 0)
        {
            foreach (var row in Model.Rows)
            {
                row.AnyRowHasActions = anyRowHasActions;
                await Html.RenderPartialAsync("/GovUkDesignSystemComponents/SubComponents/SummaryListRow.cshtml", row);
            }
        }
    }
</dl>